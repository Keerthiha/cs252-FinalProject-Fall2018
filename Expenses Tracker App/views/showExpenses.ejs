  <center><h4 style="font-family:Amatic SC , sans-serif ; color: #000000">January</h4></center>
  <table>
    <thead>
      <tr>
        <th>Name of the Expense</th>
        <th>Type of Expense</th>
        <th>Date</th>
        <th>Amount Spent</th>
      </tr>
    </thead>
  <tbody>

<% for (var i = 0; i < expenseName.length; i++) { %>
    <tr>
      <%
        var string = date[i];
        var parts = string.split("-");
        if(parts[1] == '01'){
      %>
      <td><%= expenseName[i] %></td>
      <td><%= type[i] %></td>
      <td><%= date[i] %></td>
      <td>$<%= cost[i] %></td>
